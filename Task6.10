import numpy as np


def sort_array(array):
    """
    NumPy program to sort an along the first, last axis of an array
    :param array:
    """
    print("Original array: \n", array)
    along_first = np.sort(array, axis=0)
    print("Sort along the first axis: \n", along_first)
    along_last = np.sort(array, axis=1)
    print("Sort along the last axis: \n", along_last)


if __name__ == '__main__':
    array = np.array([[4, 6], [2, 1]])
    sort_array(array)
