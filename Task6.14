import numpy as np


def combine(one_d_array, two_d_array):
    """
    NumPy program to combine a one and a two dimensional array together and display their elements.
    :param one_d_array:
    :param two_d_array:
    :return: nothing/
    """
    print("One dimensional array:")
    print(one_d_array)
    print("Two dimensional array:")
    print(two_d_array)
    for one, two in np.nditer([one_d_array, two_d_array]):
        print("%d:%d" % (one, two), )


if __name__ == '__main__':
    one_d = np.arange(4)
    two_d = np.arange(8).reshape(2, 4)
    combine(one_d, two_d)
